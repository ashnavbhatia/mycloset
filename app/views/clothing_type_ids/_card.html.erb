<div class="card mb-3">
  <h2 class="card-header h4">
    Clothing Type #<%= clothing_type_id.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back clothing_type_id, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link clothing_type_id start -->
      <div class="col">
        <%= link_to edit_clothing_type_id_url(clothing_type_id), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link clothing_type_id end -->

      <!-- Delete link clothing_type_id start -->
      <div class="col">
        <%= link_to clothing_type_id, method: :delete, data: { confirm: "Do you really want to delete this clothing_type_id?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link clothing_type_id end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(clothing_type_id.updated_at) %> ago
  </div>
</div>
