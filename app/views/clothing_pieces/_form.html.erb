  </div>
  <!-- Label and input for borrowed end -->
  <!-- Label and input for borrower_id start -->
  <div class="form-group">
    <% borrower_class = "form-control" %>
    <% borrower_was_invalid = clothing_piece.errors.include?(:borrower) %>

    <% if was_validated %>
      <% if borrower_was_invalid %>
        <% borrower_class << " is-invalid" %>
