<% was_validated = clothing_piece.errors.any? %>

<%= form_with(model: clothing_piece, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for user_id start -->
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = clothing_piece.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <!-- Input for user_id start -->
    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for user_id end -->
    <% if user_was_invalid %>
      <% clothing_piece.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for user_id end -->
  <!-- Label and input for photo start -->
  <div class="form-group">
    <% photo_class = "form-control" %>
    <% photo_was_invalid = clothing_piece.errors.include?(:photo) %>

    <% if was_validated %>
      <% if photo_was_invalid %>
        <% photo_class << " is-invalid" %>
      <% else %>
        <% photo_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :photo %>
    <!-- Input for photo start -->
    <%= f.file_field :photo, class: "form-control" %>
    <!-- Input for photo end -->
    <% if photo_was_invalid %>
      <% clothing_piece.errors.full_messages_for(:photo).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for photo end -->
  <!-- Label and input for size start -->
  <div class="form-group">
    <% size_class = "form-control" %>
    <% size_was_invalid = clothing_piece.errors.include?(:size) %>

    <% if was_validated %>
      <% if size_was_invalid %>
        <% size_class << " is-invalid" %>
      <% else %>
        <% size_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :size %>
    <!-- Input for size start -->
    <%= f.text_field :size, class: size_class, placeholder: "Enter size" %>
    <!-- Input for size end -->
    <% if size_was_invalid %>
      <% clothing_piece.errors.full_messages_for(:size).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for size end -->
  <!-- Label and input for brand_name_id start -->
  <div class="form-group">
    <% brand_name_class = "form-control" %>
    <% brand_name_was_invalid = clothing_piece.errors.include?(:brand_name) %>

    <% if was_validated %>
      <% if brand_name_was_invalid %>
        <% brand_name_class << " is-invalid" %>
      <% else %>
        <% brand_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :brand_name_id %>
    <!-- Input for brand_name_id start -->
    <%= f.collection_select :brand_name_id, BrandName.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for brand_name_id end -->
    <% if brand_name_was_invalid %>
      <% clothing_piece.errors.full_messages_for(:brand_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for brand_name_id end -->
  <!-- Label and input for clothing_type_id start -->
  <div class="form-group">
    <% clothing_type_class = "form-control" %>
    <% clothing_type_was_invalid = clothing_piece.errors.include?(:clothing_type) %>

    <% if was_validated %>
      <% if clothing_type_was_invalid %>
