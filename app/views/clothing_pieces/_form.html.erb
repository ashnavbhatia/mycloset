    <%= f.collection_select :clothing_type_id, ClothingTypeId.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for clothing_type_id end -->
    <% if clothing_type_was_invalid %>
      <% clothing_piece.errors.full_messages_for(:clothing_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for clothing_type_id end -->
  <!-- Label and input for last_used_date start -->
  <div class="form-group">
    <% last_used_date_class = "form-control" %>
    <% last_used_date_was_invalid = clothing_piece.errors.include?(:last_used_date) %>

