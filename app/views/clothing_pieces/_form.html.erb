    <!-- Input for last_used_date end -->
    <% if last_used_date_was_invalid %>
      <% clothing_piece.errors.full_messages_for(:last_used_date).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for last_used_date end -->
